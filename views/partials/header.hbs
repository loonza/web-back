<header>
  <div class="logo">
    <img src="картинка.png" alt="Логотип BoxSpace">
  </div>
  <h1>BoxSpace</h1>
  {{> nav}}

  <div class="auth-section">
    {{#if user}}
      <span class="user-name">Вы вошли как:  <strong><a href="/user/profile">{{user.username}}</a></strong></span>
